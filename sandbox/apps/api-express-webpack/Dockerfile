# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t api-express-webpack`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system api-express-webpack && \
          adduser --system -G api-express-webpack api-express-webpack

COPY  api-express-webpack
RUN chown -R api-express-webpack:api-express-webpack .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix api-express-webpack --omit=dev -f install

CMD [ "node", "api-express-webpack" ]
