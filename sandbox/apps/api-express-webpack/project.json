{
  "name": "api-express-webpack",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-express-webpack/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api-express-webpack:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api-express-webpack:build:development"
        },
        "production": {
          "buildTarget": "api-express-webpack:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/api-express-webpack/Dockerfile . -t api-express-webpack"
    }
  },
  "tags": ["app:backend"]
}
