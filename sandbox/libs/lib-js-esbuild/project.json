{
  "name": "lib-js-esbuild",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/lib-js-esbuild/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/lib-js-esbuild",
        "main": "libs/lib-js-esbuild/src/index.ts",
        "tsConfig": "libs/lib-js-esbuild/tsconfig.lib.json",
        "assets": ["libs/lib-js-esbuild/*.md"],
        "generatePackageJson": true,
        "format": ["cjs"]
      }
    }
  },
  "tags": ["lib:js"]
}
